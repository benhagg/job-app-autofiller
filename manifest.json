{
  "manifest_version": 3,
  "name": "Job Application Autofill",
  "version": "1.0.0",
  "description": "Automatically fill job application forms with your information including LinkedIn, website, veteran status, disability status, demographics, and more.",
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background/service-worker.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["utils/storage-manager.js", "utils/form-filler.js", "content/content-script.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup/popup.html"
  },
  "commands": {
    "autofill": {
      "suggested_key": {
        "default": "Ctrl+Shift+F",
        "mac": "Command+Shift+F"
      },
      "description": "Autofill job application form"
    }
  },
  "web_accessible_resources": [
    {
      "resources": ["config/field-mappings.json"],
      "matches": ["<all_urls>"]
    }
  ]
}
